#!/usr/bin/env sh

echo '<<<bitcoind:sep(0)>>>'
{% for network in networks %}
bitcoin-cli -datadir={{ network.datadir }} {{ network.extra_args }} getblockchaininfo 2>/dev/null | jq -c
{% endfor%}

echo '<<<lnd:sep(0)>>>'
curl --silent --insecure \
    -H 'Accept: application/json' \
    -H "Grpc-Metadata-macaroon: $(xxd -ps -u -c 1000 /var/lib/lnd/data/chain/bitcoin/testnet/admin.macaroon)" \
    "https://localhost:{{ lnd_rest_port }}/v1/getinfo" \
    2>/dev/null
echo
